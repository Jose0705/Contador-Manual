<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContadorManual.MainPage"
             Title="CONTADOR MANUAL"
             BackgroundColor="Black"
             >

    <Grid
        Margin="100"
        BackgroundColor="black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <VerticalStackLayout
        Grid.Row="0"
        Grid.Column="0">
    <Label
        
        Text="CONTEO"
        FontAttributes="Bold"
        TextColor="White"
        HorizontalTextAlignment="Center"
     />

       <Border
        Margin="0,20,0,30"
        Stroke="White"
        StrokeThickness="5"
        BackgroundColor="Black"
        >
       <Label
            Text="0"
            FontSize="Header"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalOptions="Center"
            Margin="0,25"
            x:Name="ConteoLabel"
        />
       </Border>


    </VerticalStackLayout>

    <HorizontalStackLayout
        Grid.Row="1"
        Grid.Column="0"
        HorizontalOptions="Center"       
        Spacing="100"
     >

    <Button
        FontSize="Medium"
        TextColor="Red"
        FontAttributes="Bold"
        Text="CONTAR"
        
        BackgroundColor="White"
        Clicked="Button_Clicked"
     />

    <Button
        Text="REINICIAR"
        TextColor="Red"
        FontAttributes="Bold"
        FontSize="Medium"
       
        BackgroundColor="White"
        Clicked="Button_Clicked_1"
     />

    </HorizontalStackLayout>
    </Grid>
</ContentPage>
